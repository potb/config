{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "Europe/Paris",
  "enabledManagers": ["nix"],
  "nix": { "enabled": true },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["0 0 * * *"],
    "automerge": true
  },
  "automerge": true,
  "automergeType": "pr",
  "automergeStrategy": "squash",
  "platformAutomerge": true,
  "packageRules": [
    {
      "description": "Disable all non-lockfile updates for Nix",
      "matchManagers": ["nix"],
      "matchUpdateTypes": ["major", "minor", "patch", "pin", "digest", "rollback", "replacement"],
      "enabled": false
    }
  ]
}
