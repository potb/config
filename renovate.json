{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "nix": {
    "enabled": true
  },
  "lockFileMaintenance": { "enabled": true },
  "automerge": true,
  "automergeType": "pr",
  "automergeStrategy": "squash",
  "automergeSchedule": ["before 3am"],
  "platformAutomerge": true,
  "schedule": ["* 0 * * *"]
}
